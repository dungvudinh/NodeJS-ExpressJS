<div class="container d-flex justify-content-center mt-3">
    <form class="col-6" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="mb-3">
            <label for="exampleName" class="form-label">Name</label>
            <input type="name" class="form-control" id="exampleName" aria-describedby="emailHelp" name="name" value="{{course.name}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputDesc" class="form-label">Description</label>
            <input type="desc" class="form-control" id="exampleInputDesc" name="description" value="{{course.description}}">
        </div>
        <div class="mb-3">
            <label for="exampleInputImage" class="form-label">Image</label>
            <input type="desc" class="form-control" id="exampleInputImage" name="image" value="{{course.image}}">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form> 
</div>